@{
    Layout = "_Layout";
}

<h2>Lista de Clientes</h2>

<div>
    <table class="table table-striped table-bordered">
        <thsead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data do Cadastro</th>
                <th></th>
            </tr>

            @foreach (var chamado in @Model)
            {
                <tr>
                    <td> @chamado.Nome </td>
                    <td> @chamado.Email </td>
                    <td> @chamado.DataDoCadastro </td>
                    <td></td>
                </tr>
            }
        </thsead>
    </table>
</div>

<div>
    <a href="/clientes/cadastro" class="btn btn-primary"> Novo Cliente </a>
</div>