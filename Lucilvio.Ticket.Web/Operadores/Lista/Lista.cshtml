@{
    Layout = "_Layout";
}

<h2> Lista de Operadores</h2>

<div>
    <table class="table table-striped table-bordered">
        <thsead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Data do Cadastro</th>
                <th></th>
            </tr>

            @foreach (var operador in @Model)
            {
                <tr>
                    <td> @operador.Nome </td>
                    <td> @operador.Email </td>
                    <td> @operador.DataDoCadastro </td>

                    <td>
                        @if (operador.Ativo)
                        {
                            <a href="@Url.Action("Inativar", "Operadores", new { id = operador.Id })" class="btn btn-primary"> Inativar </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Ativar", "Operadores", new { id = operador.Id })" class="btn btn-primary"> Ativar </a>
                        }
                    </td>
                </tr>
            }
        </thsead>
    </table>
</div>

<div>
    <a href="@Url.Action("Cadastro", "Operadores")" class="btn btn-primary"> Cadastrar Operador </a>
</div>