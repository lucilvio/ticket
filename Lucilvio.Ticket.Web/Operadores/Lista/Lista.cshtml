@{
    Layout = "_Layout";
}

<h2> Lista de Operadores</h2>

<div>
    <table class="table table-striped table-bordered">
        <thsead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Data do Cadastro</th>
            </tr>

            @foreach (var chamado in @Model)
            {
                <tr>
                    <td> @chamado.Nome </td>
                    <td> @chamado.Email </td>
                    <td> @chamado.DataDoCadastro </td>
                </tr>
            }
        </thsead>
    </table>
</div>

<div>
    <a href="@Url.Action("Cadastro", "Operadores")" class="btn btn-primary"> Cadastrar Operador </a>
</div>